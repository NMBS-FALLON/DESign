<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d"
    x:Class="AutoDESign.Views.MainWindow"
    d:DesignWidth="440.594" d:DesignHeight="275.211">
    <StackPanel Orientation="Horizontal">
        <TextBlock Text="{Binding CounterValue}" />
        <Button Command="{Binding Decrement}" Content="-" Width="100" Height="100" />
        <Button Command="{Binding Increment}" Content="+" Width="100" Height="100"/>
        <TextBlock Text="{Binding StepSize}" VerticalAlignment="Center" Height="20" Width="100" />
        <Slider Value="{Binding StepSize}" TickFrequency="1" Minimum="1" Maximum="10" VerticalAlignment="Center" Height="20" Width="100" />
    </StackPanel>
</Window>
